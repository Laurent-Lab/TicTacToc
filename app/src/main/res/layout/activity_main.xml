<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10px"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/tictactoc"
        android:layout_gravity="center"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/pionButton0"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

            <Button
                android:id="@+id/pionButton1"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

            <Button
                android:id="@+id/pionButton2"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/pionButton3"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

            <Button
                android:id="@+id/pionButton4"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

            <Button
                android:id="@+id/pionButton5"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/pionButton6"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

            <Button
                android:id="@+id/pionButton7"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

            <Button
                android:id="@+id/pionButton8"
                android:layout_width="@dimen/pion_width"
                android:layout_height="@dimen/pion_height" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tvGameStatus"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/game_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp">
    </TextView>

    <Button
        android:id="@+id/btGamePlayButton"
        android:textColor="#fff"
        android:background="#2f33f7"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/game_play_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

    </Button>

</LinearLayout>